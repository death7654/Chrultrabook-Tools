{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "Chrultrabook Controller",
    "version": "2.4.5"
  },
  "tauri": {
    "systemTray": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    },
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "window": {
        "all": false,
        "close": true,
        "hide": true,
        "show": true,
        "maximize": true,
        "minimize": true,
        "unmaximize": true,
        "unminimize": true,
        "startDragging": true,
        "center": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "org.chrultrabookcontroller.chrultrabookcontroller",
      "copyright": "GPL-3.0",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "decorations": false,
        "fullscreen": false,
        "resizable": false,
        "title": "Chrultrabook Controller",
        "width": 800,
        "height": 550,
        "transparent": true,
        "fileDropEnabled": false,
        "center": true,
        "visible": false
      },
      {
        "title": "Chrultrabook Controller",
        "width": 300,
        "height": 400,
        "decorations": false,
        "transparent": true,
        "url": "src/splashscreen.html",
        "label": "splashscreen",
        "center": true
      }
    ]
  }
}
